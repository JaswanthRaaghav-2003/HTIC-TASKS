{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "${workspaceFolder}/src/alternate_even_odd.cpp",
        "-o",
        "${workspaceFolder}/bin/alternate_even_odd.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
